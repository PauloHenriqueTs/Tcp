<Window
    x:Class="Amr.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Amr"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <ListView ItemsSource="{Binding meters}" Margin="0,0,546,0" SelectedItem="{Binding Selected,Mode=TwoWay}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="SerialId" Width="100" DisplayMemberBinding="{Binding serialId}" />
                    <GridViewColumn Header="Count" Width="50" DisplayMemberBinding="{Binding count}" />
                    <GridViewColumn Header="Switch State" Width="100" DisplayMemberBinding="{Binding Switch}" />
                </GridView>
            </ListView.View>
        </ListView>
        <Button Content="fdgdfg" Margin="519,303,174,68" Command="{Binding AddCommand}" />
    </Grid>
</Window>